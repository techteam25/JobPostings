{
  "name": "backend",
  "version": "1.0.0",
  "description": "Express.js backend with TypeScript",
  "main": "dist/server.js",
  "scripts": {
    "dev": "bun --watch src/server.ts",
    "start": "bun dist/server.js",
    "build": "bun build src/server.ts --target=bun --outdir=dist",
    "build:tsc": "tsc",
    "clean": "rm -rf dist",
    "type-check": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:integration": "vitest run tests/integration",
    "test:unit": "vitest run tests/unit",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "db:drop": "drizzle-kit drop"
  },
  "private": true,
  "devDependencies": {
    "@types/bun": "latest",
    "@types/express": "^5.0.3",
    "@types/node": "^24.3.1",
    "@types/supertest": "^6.0.3",
    "@vitest/coverage-v8": "3.2.4",
    "@vitest/ui": "^3.2.4",
    "c8": "^10.1.3",
    "drizzle-kit": "^0.31.4",
    "nodemon": "^3.1.10",
    "prettier": "^3.6.2",
    "supertest": "^7.1.4",
    "vitest": "^3.2.4"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "dotenv": "^17.2.2",
    "drizzle-orm": "^0.44.5",
    "drizzle-zod": "^0.8.3",
    "express": "^5.1.0",
    "mysql2": "^3.14.5",
    "zod": "^4.1.8"
  }
}
