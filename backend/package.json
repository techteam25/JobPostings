{
  "name": "backend",
  "version": "1.0.0",
  "description": "Express.js backend with TypeScript",
  "main": "dist/server.js",
  "scripts": {
    "dev": "bun --watch src/server.ts",
    "start": "bun dist/server.js",
    "build": "bun build src/server.ts --target=bun --outdir=dist",
    "build:tsc": "tsc",
    "clean": "rm -rf dist",
    "type-check": "tsc --noEmit",
    "test": "vitest run",
    "test:show-config": "vitest --showConfig",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:integration": "vitest run tests/integration",
    "test:unit": "vitest run tests/unit",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "db:drop": "drizzle-kit drop",
    "services:up": "docker compose up -d",
    "services:down": "docker compose down -v"
  },
  "private": true,
  "devDependencies": {
    "@eslint/js": "^9.36.0",
    "@faker-js/faker": "^10.0.0",
    "@types/bcrypt": "^6.0.0",
    "@types/bun": "latest",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/helmet": "^0.0.48",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^24.5.0",
    "@types/nodemailer": "^7.0.2",
    "@types/sanitize-html": "^2.16.0",
    "@types/supertest": "^6.0.3",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "@vitest/coverage-v8": "3.2.4",
    "@vitest/ui": "^3.2.4",
    "c8": "^10.1.3",
    "drizzle-kit": "^0.31.4",
    "eslint": "^9.36.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "globals": "^16.4.0",
    "nodemon": "^3.1.10",
    "pino-pretty": "^13.1.1",
    "prettier": "^3.6.2",
    "supertest": "^7.1.4",
    "typescript-eslint": "^8.45.0",
    "vitest": "^3.2.4"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "@asteasolutions/zod-to-openapi": "^8.1.0",
    "bcrypt": "^6.0.0",
    "better-auth": "^1.3.28",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "drizzle-orm": "^0.44.5",
    "drizzle-zod": "^0.8.3",
    "express": "^5.1.0",
    "express-rate-limit": "^8.1.0",
    "firebase": "^12.4.0",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "mysql2": "^3.14.5",
    "nodemailer": "^7.0.9",
    "pino": "^10.0.0",
    "pino-http": "^11.0.0",
    "rate-limit-redis": "^4.2.2",
    "redis": "^5.8.3",
    "sanitize-html": "^2.17.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "typesense": "^2.1.0",
    "zod": "^4.1.8"
  }
}
