{
  "name": "backend",
  "version": "1.0.0",
  "description": "Express.js backend with TypeScript",
  "main": "dist/server.js",
  "scripts": {
    "dev": "bun --watch src/server.ts",
    "start": "bun dist/server.js",
    "build": "bun build src/server.ts --target=bun --outdir=dist",
    "build:tsc": "tsc",
    "clean": "rm -rf dist",
    "type-check": "tsc --noEmit",
    "test": "DB_NAME=jobpostings_test vitest run",
    "test:show-config": "vitest --showConfig",
    "test:watch": "DB_NAME=jobpostings_test vitest",
    "test:ui": "DB_NAME=jobpostings_test vitest --ui",
    "test:coverage": "DB_NAME=jobpostings_test vitest run --coverage",
    "test:integration": "DB_NAME=jobpostings_test vitest run tests/integration",
    "test:unit": "DB_NAME=jobpostings_test vitest run tests/unit",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:migrate-test": "DB_NAME=jobpostings_test drizzle-kit migrate",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "db:drop": "drizzle-kit drop",
    "db:seed": "bun src/db/db-seed.ts",
    "services:up": "docker compose up -d",
    "services:down": "docker compose down",
    "services:purge": "docker compose down -v --rmi all --remove-orphans"
  },
  "private": true,
  "devDependencies": {
    "@eslint/js": "^9.36.0",
    "@faker-js/faker": "^10.0.0",
    "@types/bcrypt": "^6.0.0",
    "@types/bun": "latest",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/helmet": "^0.0.48",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^24.5.0",
    "@types/nodemailer": "^7.0.2",
    "@types/sanitize-html": "^2.16.0",
    "@types/supertest": "^6.0.3",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "@vitest/coverage-v8": "3.2.4",
    "@vitest/ui": "^3.2.4",
    "c8": "^10.1.3",
    "drizzle-kit": "^0.31.4",
    "drizzle-seed": "^0.3.1",
    "eslint": "^9.36.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "globals": "^16.4.0",
    "nodemon": "^3.1.10",
    "prettier": "^3.6.2",
    "supertest": "^7.1.4",
    "typescript-eslint": "^8.45.0",
    "vitest": "^3.2.4"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "@asteasolutions/zod-to-openapi": "^8.1.0",
    "@types/multer": "^2.0.0",
    "bcrypt": "^6.0.0",
    "better-auth": "^1.3.28",
    "bullmq": "^5.61.2",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "drizzle-orm": "^0.44.5",
    "drizzle-zod": "^0.8.3",
    "express": "^5.1.0",
    "express-rate-limit": "^8.1.0",
    "firebase": "^12.4.0",
    "helmet": "^8.1.0",
    "isomorphic-dompurify": "^2.32.0",
    "jsonwebtoken": "^9.0.2",
    "multer": "^2.0.2",
    "mysql2": "^3.14.5",
    "nodemailer": "^7.0.9",
    "pino": "8.17.2",
    "pino-http": "8.3.3",
    "pino-pretty": "9.4.0",
    "rate-limit-redis": "^4.2.2",
    "redis": "^5.8.3",
    "sanitize-html": "^2.17.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "typesense": "^2.1.0",
    "zod": "^4.1.8"
  }
}
