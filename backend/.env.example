# Server Configuration
PORT=5500
HOST=localhost
NODE_ENV=development

SERVER_URL=http://localhost:5500
FRONTEND_URL=http://localhost:3000

# Database Configuration (MySQL)
DB_HOST=localhost
DB_PORT=3306
DB_NAME=jobpostings
DB_USER=your_db_user
DB_PASSWORD=MYSQL_ROOT_PASSWORD
MYSQL_ROOT_PASSWORD=your_db_root_password

# JWT Secret (for authentication)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_REFRESH_SECRET=your-super-secret-refresh-token-change-this-in-production

# Redis Server Password
REDIS_CACHE_PWD=your-redis-cache-password-change-this-in-production
REDIS_QUEUE_PWD=your-redis-queue-password-change-this-in-production
REDIS_RATE_LIMITER_PWD=your-redis-rate-limiter-password-change-this-in-production

REDIS_CACHE_URL=redis://:<replace-with-your-secret-pwd>@localhost:6379
REDIS_QUEUE_URL=redis://:<replace-with-your-secret-pwd>@localhost:6379
REDIS_RATE_LIMITER_URL=redis://:<replace-with-your-secret-pwd>@localhost:6379

# log level
LOG_LEVEL=info

# Email Configuration
SMTP_HOST=hostname
SMTP_PORT=1234
SMTP_SECURE=true
SMTP_USER=user
SMTP_PASS=your-secret-smtp-password-change-this-in-production
EMAIL_FROM=domain@your-domain.com

# Better Auth Secret
BETTER_AUTH_SECRET=your-better-auth-secret-change-this-in-production

# Google OAuth Credentials
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# LinkedIn OAuth Credentials
LINKEDIN_CLIENT_ID=your-linkedin-client-id
LINKEDIN_CLIENT_SECRET=your-linkedin-client-secret

# Firebase Configuration
FIREBASE_PROJECT_ID=your-firebase-project-id
FIREBASE_API_KEY=your-firebase-api-key
FIREBASE_AUTH_DOMAIN=your-firebase-auth-domain
FIREBASE_STORAGE_BUCKET=your-firebase-storage-bucket
FIREBASE_MESSAGING_SENDER_ID=your-firebase-messaging-sender-id
FIREBASE_APP_ID=your-firebase-app-id
FIREBASE_MEASUREMENT_ID=your-firebase-measurement-id

# Typesense Configuration
TYPESENSE_API_KEY=your-typesense-api-key-change-this-in-production
TYPESENSE_HOST=localhost
TYPESENSE_PORT=8108
TYPESENSE_PROTOCOL=http

# Audit log retention (days)
AUDIT_RETENTION_DAYS=90

# Cleanup schedule (cron format)
AUDIT_CLEANUP_SCHEDULE="0 2 * * *"
